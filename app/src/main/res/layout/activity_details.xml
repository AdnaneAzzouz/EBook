<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.adnane.ebook.ui.DetailsActivity">

    <ImageView
        android:id="@+id/book_details_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="center"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/author_details_tv"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_details_tv" />

    <TextView
        android:id="@+id/title_details_tv"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="@color/purple_500"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/book_details_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/description_details_tv"
        android:layout_width="match_parent"
        android:textSize="23sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/author_details_tv"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>